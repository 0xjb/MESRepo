<Window x:Class="MES.Presentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MES.Presentation"
        mc:Ignorable="d"
        Title="LoginWindow" Height="275.411" Width="468.032">
    <Grid Margin="0,0,2,1">
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="295,140,0,0" VerticalAlignment="Top" Width="75" Click="HandleClickLoginButtonEvent"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="23" Margin="125,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="passwordBox" HorizontalAlignment="Left" Margin="125,140,0,0" VerticalAlignment="Top" Height="23" Width="120" PasswordChar="*"/>
    </Grid>
</Window>
